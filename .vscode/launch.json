    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch HTTP server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "main.go",
            "args": ["api-server"]
        },
        {
            "name": "Import Companies House zip file",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "main.go",
            "args": [
                "import-companies-house",
                "--zip-file",
                "https://download.companieshouse.gov.uk/BasicCompanyDataAsOneFile-{{yyyy}}-{{mm}}-01.zip"
            ]
        },
        {
            "name": "Import Codepoint zip file",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "main.go",
            "args": [
                "import-code-point",
                "--zip-file",
                "https://api.os.uk/downloads/v1/products/CodePointOpen/downloads?area=GB&format=CSV&redirect"
            ]
        }
    ]
}
